<!DOCTYPE html>
<html>
<head>
  <title>PromiscuousPairProgramming</title>
  <%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% if current_user %>
<div id="account_management">
  <%= link_to "Sign out", destroy_user_session_path %>
</div>
<div id="welcome">
  Hello <%= current_user.email %>
</div>
<div id="navigation">
  <%=link_to "My Sessions", pairing_sessions_path %>
</div>
<% else %>
<div id="account_management">
  <%= link_to "Create an account", new_user_registration_path %> or
  <%= link_to "Sign in", new_user_session_path %>
</div>
<% end %>

<div id="flashes">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>

<%= yield %>

</body>
</html>
